pipeline {
  agent any 

  stages {
      stage ('Check OUT & clean') {
        steps {
            bat 'mvn clean -f Week5_JenkinsAssignment.git'
            bat 'git clone https://github.com/Mamita123/Week5_JenkinsAssignment.git'
         
        }

      }
     stage ('install') {
        steps {
           bat 'mvn install -f Week5_JenkinsAssignment.git'
        }

      }

    stage ('Test') {
        steps {
         bat 'mvn test -f Week5_JenkinsAssignment.git '
        }
        post {
          success {
            junit '**/target/surefire-reports/TEST-*.xml'
            jacoco(execPattern: '**/target/jacoco.exec')
          }
        }

      }
  }


}
