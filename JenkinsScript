pipeline {
  agent any 

  stages {
      stage ('Check OUT & clean') {
        steps {
            
            bat 'git clone https://github.com/Mamita123/Week5_JenkinsAssignment.git'
     
         
        }

      }
     stage ('install') {
        steps {
            bat 'mvn clean 
          bat 'mvn install 
        }

      }

    stage ('Test') {
        steps {
         bat 'mvn test 
        }
        post {
          success {
            junit '**/target/surefire-reports/TEST-*.xml'
            jacoco(execPattern: '**/target/jacoco.exec')
          }
        }

      }
  }


}
