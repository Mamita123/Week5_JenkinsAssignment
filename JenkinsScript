pipeline {
  agent any 

  stages {
      stage ('Check OUT') {
        steps {
            git branch: 'main',  url:  'https://github.com/Mamita123/Week5_JenkinsAssignment.git'
         
        }

      }
     stage ('Build') {
        steps {
           bat 'mvn clean install'
        }

      }

    stage ('Test') {
        steps {
         echo 'mvn test '
        }
        post {
          success {
            junit '**/target/surefire-reports/TEST-*.xml'
            jacoco(execPattern: '**/target/jacoco.exec')
          }
        }

      }
  }


}
